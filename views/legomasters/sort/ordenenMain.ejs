<%- include("../../header.ejs") -%>
    <center>
            <img alt="fotoMinifig" src=<%=minifigs[0][0].set_img_url%> height="200px" />
            <p><%=minifigs[0][0].name%></p>

            <form action="/legomasters/sort/skip"  method="post">
                <input id="btn-skip" type="submit" value="Skip">
            </form>

            <form action="/legomasters/sort/blacklist" method="post">
                <input id="btn-blacklist" type="submit" value="Blacklist">
            </form>

            <form class="btn-group" action="/legomasters/sort/add" method="post">
                <input id="btn-add" type="submit" value="Add">
                <h3>Beschikbare Sets</h3>
                <div>
                    <% for(let i = 0; i<minifigs[1][0].count; i++) { %>
                    <label>
                        <input type="radio" name="choiceSet" value=<%=minifigs[1][0].results[i].set_num%>>
                        <img alt="fotoSet" src=<%=minifigs[1][0].results[i].set_img_url%> height="200px" />
                        <p><%=minifigs[1][0].results[i].name%></p>
                    </label>
                    <% } %>
                </div>
            </form>
    </center>
<%- include("../../footer.ejs") -%>